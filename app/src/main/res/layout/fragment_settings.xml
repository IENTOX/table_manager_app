<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".common.fragment.SettingsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SettingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/tablemanager_black"
        android:textStyle="bold|italic"
        android:gravity="start|bottom"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingTop="30dp"
        android:elevation="5dp"
        android:textSize="28sp"
        android:text="Settings"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ProfileView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        android:padding="5dp"
        android:src="@drawable/ic_profile_male"/>
    <ScrollView
        android:layout_below="@+id/SettingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ThemePanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:cropToPadding="true"
                        android:scaleType="centerInside"
                        android:padding="5dp"
                        android:src="@drawable/ic_day_night"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/AppearanceTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Appearance"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="1dp"/>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/ThemeSetter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:stepSize="1"
                    android:value="2"
                    android:valueFrom="1"
                    android:valueTo="3"
                    app:labelBehavior="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingHorizontal="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="Light"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="System"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="Dark"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:src="@drawable/black_box"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/AppInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/ThemePanel"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:cropToPadding="true"
                        android:scaleType="centerInside"
                        android:padding="5dp"
                        android:src="@drawable/ic_app_info"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/AppInfoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="About App"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="1dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:src="@drawable/black_box"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/AppInfo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:cropToPadding="true"
                        android:scaleType="centerInside"
                        android:padding="5dp"
                        android:src="@drawable/ic_privacy_policy"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/PrivacyPolicyTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Privacy Policy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="1dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:src="@drawable/black_box"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:visibility="visible"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>