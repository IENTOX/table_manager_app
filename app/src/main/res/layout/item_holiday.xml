<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:paddingTop="0dp"
    android:paddingHorizontal="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/tv_background_6"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="14"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/StartDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|bottom"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="StartDate"
            android:fontFamily="@font/font_tablemanager_bold"
            android:textColor="?colorTextInverse"
            android:layout_weight="4"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/ic_fg_dot"
            android:layout_weight="6"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/EndDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|bottom"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="?colorTextInverse"
            android:fontFamily="@font/font_tablemanager_bold"
            android:text="EndDate"
            android:layout_weight="4"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/HolidayCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="?colorTextInverse"
            android:fontFamily="@font/font_tablemanager_bold"
            android:text="0 Days"
            android:layout_weight="4"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/HolidayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="?colorTextInverse"
            android:text="Time Pass"
            android:fontFamily="@font/font_tablemanager_bold"
            android:layout_weight="2"/>

    </LinearLayout>

</LinearLayout>