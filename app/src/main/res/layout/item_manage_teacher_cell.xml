<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="5dp"
    android:background="@drawable/tv_background"
    android:weightSum="12"
    android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TeacherID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:fontFamily="@font/font_tablemanager_bold"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="ID"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TeacherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:fontFamily="@font/font_tablemanager_bold"
        android:maxLines="2"
        android:textSize="12sp"
        android:text="NAME"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TeacherSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
    android:fontFamily="@font/font_tablemanager_bold"
    android:maxLines="2"
        android:gravity="center"
        android:textSize="12sp"
        android:text="ASSIGNED SUBJECT"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/TeacherRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_weight="3"
        app:contentPaddingStart="3dp"
        app:contentPaddingEnd="3dp"
        app:contentPaddingTop="3dp"
        app:contentPaddingBottom="3dp"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:background="?colorErrorContainer"
        app:strokeColor="@color/md_theme_light_error"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.Circle"
        app:strokeWidth="1dp"
        app:srcCompat="@drawable/ic_delete_new"/>

</LinearLayout>