<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/PendingRequestUI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_background_inner"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:fontFamily="@font/font_tablemanager_extra_light"
            android:textStyle="bold"
            android:text="Teachers Name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/AcceptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:includeFontPadding="true"
                android:padding="3dp"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                android:text="Accept"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/RejectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="?android:colorBackground"
                android:includeFontPadding="true"
                android:padding="3dp"
                app:strokeWidth="3dp"
                app:strokeColor="?android:colorError"
                app:icon="@drawable/ic_close"
                app:iconGravity="textStart"
                app:iconTint="?android:colorError"
                android:text="Reject"
                android:textColor="?android:colorError"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/NoPendingRequestsUI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@drawable/tv_background_inner"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:padding="15dp"
            android:fontFamily="@font/font_tablemanager_extra_light"
            android:textStyle="bold"
            android:text="No New Requests"/>

    </LinearLayout>

</LinearLayout>