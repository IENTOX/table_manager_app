<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ManageTeachers"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/b_black"
        android:text="ManageTeachers"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/back_button_description_string"
        android:padding="20dp"
        android:src="@drawable/ic_arrow_back" />

    <LinearLayout
        android:id="@+id/ActionTabView"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_below="@+id/ManageTeachers"
        android:orientation="horizontal"
        android:background="@drawable/tv_background_4"
        android:paddingBottom="0dp"
        android:weightSum="2"
        android:gravity="center_horizontal|bottom">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ManageTeacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/tv_background_5"
            android:fontFamily="@font/b_black"
            android:textSize="16sp"
            android:gravity="center_horizontal|bottom"
            android:text="Manage Teachers"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ManageHours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/b_black"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center_horizontal|bottom"
            android:text="Manage Hours"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ActionTabView"/>

</RelativeLayout>